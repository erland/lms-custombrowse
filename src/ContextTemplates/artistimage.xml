<?xml version="1.0" encoding="utf-8"?>
<custombrowse>
	<minpluginversion>1.23</minpluginversion>
	<template>
		<downloadidentifier>176</downloadidentifier>
		<name>Artist image</name>
		<description>Artist image for selected artist, images are collected from the specified sub directory within "Cache directory for images" specified in Custom Browse settings</description>
		<parameter type="text" id="menuname" name="Menu name" value="Artist image"/>
		<parameter type="text" id="menugroup" name="Menu group" value=""/>
		<parameter type="text" id="menuorder" name="Menu sort order (1-100)" value="50"/>
		<parameter type="text" id="imagewidth" name="Image width" value="200"/>
		<parameter type="text" id="subdirectory" name="Sub directory" value="artists"/>
		<parameter type="singlelist" id="linktype" name="Link type" value="image" data="image=Image,lastfm=LastFM,wikipedia=Wikipedia,allmusic=allmusic"/>
		<parameter type="text" id="includedclients" name="Only include on these players (empty = all)" value=""/>
		<parameter type="text" id="excludedclients" name="Exclude from these players" value=""/>
		<parameter type="sqloptionalmultiplelist" id="includedlibraries" requireplugins="MultiLibrary::Plugin" name="Only include when these libraries are active (empty = all)" value="" data="select id,name,id from multilibrary_libraries"/>
		<parameter type="sqloptionalmultiplelist" id="excludedlibraries" requireplugins="MultiLibrary::Plugin" name="Exclude when these libraries are active" value="" data="select id,name,id from multilibrary_libraries"/>
		<parameter type="text" id="objecttype" name="Object type" value="artistheader"/>
	</template>
</custombrowse>

