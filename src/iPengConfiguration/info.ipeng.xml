<?xml version="1.0" encoding="utf-8"?>
<configuration>
	<section id="nowplaying">
		<subsection id="custombrowse_info">
			<name>CB:</name>
			<weight>10</weight>
			<command id="songinfo">
				<defaultenabled>0</defaultenabled>
				<requireplugins>CustomBrowse</requireplugins>
				<weight>30</weight>
				<name>Song</name>
				<icon>html/images/infobutton.png</icon>
				<url>plugins/CustomBrowse/custombrowse_contextheader.html?customtemplate=customtemplate_songinfo.html&amp;hierarchy=group_track&amp;contexttype=track</url>
				<type>content</type>
				<parameters>
					<id>contextid</id>
					<title>contextname</title>
					<player>player</player>
				</parameters>
			</command>
			<command id="albuminfo">
				<requireplugins>CustomBrowse</requireplugins>
				<weight>20</weight>
				<name>Album</name>
				<icon>html/images/infobutton.png</icon>
				<url>plugins/CustomBrowse/custombrowse_contextheader.html?customtemplate=customtemplate_albuminfo.html&amp;hierarchy=group_album&amp;contexttype=album</url>
				<type>content</type>
				<parameters>
					<album_id>contextid</album_id>
					<album>contextname</album>
					<player>player</player>
				</parameters>
			</command>
			<command id="artistinfo">
				<requireplugins>CustomBrowse</requireplugins>
				<weight>30</weight>
				<name>Artist</name>
				<icon>html/images/infobutton.png</icon>
				<url>plugins/CustomBrowse/custombrowse_contextheader.html?customtemplate=customtemplate_artistinfo.html&amp;hierarchy=group_artist&amp;contexttype=artist</url>
				<type>content</type>
				<parameters>
					<artist_id>contextid</artist_id>
					<artist>contextname</artist>
					<player>player</player>
				</parameters>
			</command>
		</subsection>
	</section>
</configuration>
